<resources>

    <!-- BaseActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>

        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="TextView">
        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="fontFamily">@font/main_font_family</item>
    </style>

    <style name="TabLayoutTextAppearance.HealthTab" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ContentImageView">
        <item name="android:background">@color/tab_inactive</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextView.ItemContentTitle">
        <item name="fontFamily">@font/bold_font_family</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextView.ItemContentDescription">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.ItemContentTitle.VideoTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.ItemContentTitle.SoundTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontFamily">@font/main_font_family</item>
    </style>

    <style name="BMISeekBar">
        <item name="android:indeterminateOnly">false</item>
        <!--<item name="android:progressDrawable">@android:drawable/progress_horizontal</item>-->
        <!--<item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>-->
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="TextView.Bold.BMITitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.Bold.BMIInputValue">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.BMITableDescription">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingRight">@dimen/space_4</item>
        <item name="android:paddingLeft">@dimen/space_1</item>
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_1</item>
    </style>

    <style name="TextView.BMITableTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">@dimen/space_3</item>
        <item name="android:paddingLeft">@dimen/space_1</item>
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_1</item>
    </style>

    <style name="TextView.ReadMore">
        <item name="android:padding">@dimen/space_0.5</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextView.Bold">
        <item name="fontFamily">@font/bold_font_family</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbarTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="FoodDialogTextViews" parent="AppTheme.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/bmi_25_to_30</item>
        <item name="android:text">"ارزش غذایی"</item>

    </style>

    <style name="ConsumedAmount" parent="AppTheme.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/bmi_25_to_30</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/amount_background</item>
    </style>



</resources>
